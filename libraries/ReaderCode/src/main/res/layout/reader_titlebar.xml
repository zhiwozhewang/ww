<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/l_titlebar_height"
    android:background="?attr/drawableTitlebar">

    <RelativeLayout
        android:id="@+id/view_titlebar_left"
        android:layout_width="@dimen/l_titlebar_height"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/list_selector">

        <ImageView
            android:id="@+id/image_titlebar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@null"
            android:contentDescription="@null" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="意见反馈"
        android:textColor="?attr/textReaderBody_1"
        android:textSize="@dimen/text_size_medium" />

</RelativeLayout>