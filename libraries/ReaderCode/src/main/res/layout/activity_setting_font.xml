<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.loopeer.android.apps.lreader.ui.views.ReaderTitlebarView
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:readerTitlebarLeftIcon="?attr/drawableBack"
        app:readerTitlebarTitle="@string/titlebar_title_setting_font" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:clipToPadding="@bool/gridClipToPadding"
        android:divider="?attr/colorDivider"
        android:dividerHeight="@dimen/divider_height"
        android:drawSelectorOnTop="false"
        android:listSelector="@drawable/list_selector"
        android:paddingBottom="@dimen/activity_vertical_margin" />

</LinearLayout>