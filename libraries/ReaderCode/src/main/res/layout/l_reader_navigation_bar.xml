<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapper_reader_navifation_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/l_titlebar_height">

    <LinearLayout
        android:id="@+id/view_reader_navigationbar_back"
        android:layout_width="@dimen/l_reader_navigationbar_height"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/list_selector">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/reader_navigationbar_horizontal_margin"
            android:layout_marginRight="@dimen/reader_navigationbar_horizontal_margin"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_l_reader_navigation_bar_back_day" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_reader_navigationbar_toc"
        android:layout_width="@dimen/l_reader_navigationbar_height"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/view_reader_navigationbar_back"
        android:layout_toRightOf="@id/view_reader_navigationbar_back"
        android:background="@drawable/list_selector">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/reader_navigationbar_horizontal_margin"
            android:layout_marginRight="@dimen/reader_navigationbar_horizontal_margin"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_l_reader_navigation_bar_toc_day" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_reader_navigationbar_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/list_selector">

        <ImageView
            android:id="@+id/image_reader_navigationbar_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/reader_navigationbar_horizontal_margin"
            android:layout_marginRight="@dimen/reader_navigationbar_horizontal_margin"
            android:background="@null"
            android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_reader_navigationbar_font"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/view_reader_navigationbar_bookmark"
        android:layout_toStartOf="@id/view_reader_navigationbar_bookmark"
        android:background="@drawable/list_selector">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/reader_navigationbar_horizontal_margin"
            android:layout_marginRight="@dimen/reader_navigationbar_horizontal_margin"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_l_reader_navigation_bar_font_day" />
    </LinearLayout>

</RelativeLayout>