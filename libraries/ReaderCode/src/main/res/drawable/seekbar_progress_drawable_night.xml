<?xml version="1.0" encoding="UTF-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0.0dip" />
            <gradient android:startColor="#2a2e36"
                android:endColor="#2a2e36" android:angle="270.0"
                android:centerY="0.75" android:centerColor="#2a2e36" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />
                <gradient android:startColor="#ff5fb7e7"
                    android:endColor="#ff5fb7e7"
                    android:angle="270.0" android:centerY="0.75" 
                    android:centerColor="#ff5fb7e7" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />
                <gradient android:startColor="#ff5fb7e7"
                    android:endColor="#ff5fb7e7"
                    android:angle="270.0" android:centerY="0.75" 
                    android:centerColor="#ff5fb7e7" />
            </shape>
        </clip>
    </item>
</layer-list>